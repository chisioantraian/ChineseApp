<Window x:Class="ChineseAppWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChineseAppWPF"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="Window1" Height="1080" Width="1920">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Name="WordsPanel">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="8*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button
                    Name="RandomButton"
                    Click="RandomButton_Click"
                    Grid.Column="0" 
                    Content="&#x1f3b2;"
                    FontSize="16"
                    Margin="15"/>


                <TextBox 
                    Grid.Column="1"
                    Name="SearchBar" FontSize="20" 
                    Padding="15" Margin="15" 
                    KeyUp="SearchBar_KeyUp"/>

                <ComboBox 
                    Name="InputComboBox" 
                    Grid.Column="2"
                    Margin="15"
                    Padding="15"
                    FontSize="16"
                    SelectedIndex="0">
                    <ComboBoxItem>English</ComboBoxItem>
                    <ComboBoxItem>Chinese</ComboBoxItem>
                    <ComboBoxItem>Pronounciation</ComboBoxItem>
                    <ComboBoxItem>Compose</ComboBoxItem>
                </ComboBox>
            </Grid>

            <ListBox Name="WordsList" 
                     Grid.Row="1" 
                     VirtualizingStackPanel.VirtualizationMode="Recycling"
                     HorizontalContentAlignment="Stretch">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="8">
                            <StackPanel>

                                <ItemsControl ItemsSource="{Binding SimplifiedPinyinPairs}">

                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock
                                                    Text="{Binding ChineseCharacter}"
                                                    FontSize="48"
                                                    HorizontalAlignment="Center"
                                                    MouseUp="CharacterAndPinyin_MouseUp"
                                                    MouseEnter="CharacterAndPinyin_MouseEnter"
                                                    />

                                                <TextBlock
                                                    Name="caracterPronuntie"
                                                    HorizontalAlignment="Center"
                                                    Margin="-10"
>
                                                    <TextBlock.Inlines>
                                                        <Run Text="{Binding Pinyin}"
                                                             FontSize="12" 
                                                             FontWeight="Bold"
                                                             Foreground="DarkGreen"
                                                             />
                                                    </TextBlock.Inlines>
                                                </TextBlock>

                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>

                                </ItemsControl>

                                <TextBlock Text="{Binding Definitions}" 
                                       FontSize="16"
                                       Foreground="Brown"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>

            </ListBox>
        </Grid>

        <TabControl Name="MyTabControl"
                    Grid.Column="1">
            <TabItem Header="Words">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border BorderThickness="2" BorderBrush="Black" Grid.Column="0">
                        <TextBlock 
                            Name="ZoomedCharacterBox"
                            TextAlignment="Center"
                            FontSize="300" />
                    </Border>

                    <Border BorderThickness="2" BorderBrush="Black" Grid.Column="1">
                        
                        <!--<TextBlock 
                            Name="DecompositionBlock"
                            FontSize="16" /> -->


                        <ListBox Name="DecompositionWordList" 
                                 VirtualizingStackPanel.VirtualizationMode="Recycling"
                                 HorizontalContentAlignment="Stretch">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Black"
                                            BorderThickness="1"
                                            CornerRadius="8">
                                        <StackPanel>
                                            <ItemsControl ItemsSource="{Binding SimplifiedPinyinPairs}">

                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>

                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Vertical">
                                                            <TextBlock
                                                                Text="{Binding ChineseCharacter}"
                                                                FontSize="48"
                                                                HorizontalAlignment="Center"
                                                                MouseUp="CharacterAndPinyin_MouseUp" />

                                                            <TextBlock
                                                                Name="caracterPronuntie"
                                                                HorizontalAlignment="Center"
                                                                Margin="-10" >
                                                                <TextBlock.Inlines>
                                                                    <Run Text="{Binding Pinyin}"
                                                                         FontSize="12" 
                                                                         FontWeight="Bold"
                                                                         Foreground="DarkBlue" />
                                                                </TextBlock.Inlines>
                                                            </TextBlock>

                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>

                                            </ItemsControl>

                                            <TextBlock 
                                                Text="{Binding Definitions}" 
                                                FontSize="16"
                                                Foreground="Brown"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>

                        </ListBox>




                        <!--<ListBox 
                             Name="DecompositionWordList" 
                             VirtualizingStackPanel.VirtualizationMode="Recycling"
                             HorizontalContentAlignment="Stretch" /> -->

                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Gramm.Analysis.(temp)" Height="20" VerticalAlignment="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="2*" />
                        </Grid.RowDefinitions>
                        <WrapPanel Name="MiddleWordBox" Grid.Row="0" />
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*" />
                                    <RowDefinition Height="2*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <TextBox Name="TestSentenceInputBox"
                                         Grid.Row="0"
                                         Margin="10" />
                                <TextBox Name="TestSentenceResultBox"
                                         Grid.Row="1"
                                         Margin="10" />
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0"
                                            Click="AnalyseSentence_Click"
                                            Content="Analyse sentence"
                                            Margin="25" />
                                    <Button Grid.Column="1"
                                            Click="SaveSentence_Click"
                                            Content="Save sentence"
                                            Margin="25" />

                                </Grid>

                            </Grid>

                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="4*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <TextBlock Name="AnalysisStatisticsBox"
                                           Grid.Row="0" />
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="1"
                                            Content="Hide words"
                                            Margin="20"/>
                                    <Button Grid.Column="2"
                                            Content="Hide examples"
                                            Margin="20"/>

                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>

                    <ListBox Name="ExamplesList"
                             Grid.Column="1" >
                        <StackPanel Name="StatisticsBox">
                            <TextBlock Name="DecompositionBlock2"
                           FontSize="20"
                           Margin="10" />
                        </StackPanel>
                    </ListBox>
                </Grid>
            </TabItem>

            <TabItem Header="Analysis"  Height="20" VerticalAlignment="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="23*"/>
                            <ColumnDefinition Width="89*"/>
                            <ColumnDefinition Width="844*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <WrapPanel Name="SentenceAnalysisBox" Grid.Row="0" Grid.ColumnSpan="3" Margin="0,0,-1,0" />


                        <TextBox Name="SentenceAnalysisInputBox"
                                 KeyUp="SentenceAnalysis_KeyUp"
                                 Grid.Row="1"
                                 FontSize="16"
                                 Margin="10,10,9,10" Grid.ColumnSpan="3" />
                    </Grid>

                    <Border BorderThickness="3" 
                            BorderBrush="Black" 
                            Grid.Column="1">
                        <StackPanel Name="PatternsPanel" />
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Decomposition" />

        </TabControl>
    </Grid>
</Window>
