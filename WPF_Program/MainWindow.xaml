<Window x:Class="ChineseAppWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChineseAppWPF"
        mc:Ignorable="d"
        
        Closing="Window_Closing"
        Title="Window1" Height="1080" Width="1920" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Name="WordsPanel">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="45px" />
                <RowDefinition Height="8*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="WhiteSmoke">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50px" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Name="UndoButton"
                        IsEnabled="False"
                        Margin="5,20,5,20"
                        Content="Undo"
                        Click="Undo_Click" />
                <TextBox 
                    Grid.Column="1"
                    Name="SearchBar" FontSize="16" 
                    Padding="12" Margin="12" 
                    ToolTip="Search something automatically by typing in english or chinese"
                    KeyUp="SearchBar_KeyUp"/>
            </Grid>



            <Grid Grid.Row="1"
                  Background="WhiteSmoke">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />

                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="5,0,10,0">
                    <TextBlock Text="Input language:" />
                    <ComboBox
                        Name="InputComboBox"
                        Background="Beige"
                        ToolTip="Choose how the search bar will be used"
                        SelectionChanged="InputComboBox_SelectionChanged"
                        SelectedIndex="0">
                        <ComboBoxItem ToolTip="Search words by typing in english">English</ComboBoxItem>
                        <ComboBoxItem ToolTip="Search words by typing in chinese/pinyin">Chinese</ComboBoxItem>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="0,0,10,0">
                    <TextBlock Text="Sort By: "/>
                    <ComboBox Name="SortingComboBox"
                              ToolTip="Sort shown words by some criterion"
                              SelectionChanged="SortingComboBox_SelectionChanged"
                          
                          SelectedIndex="0">
                        <ComboBoxItem ToolTip="Sort by word's frequency in language">Frequency</ComboBoxItem>
                        <ComboBoxItem ToolTip="Sort by word's number of strokes">Strokes</ComboBoxItem>
                        <ComboBoxItem ToolTip="Sort alphabetically by word's pronounciation">Pinyin</ComboBoxItem>
                        <ComboBoxItem ToolTip="The exact typed word is shown first">Exact</ComboBoxItem>
                    </ComboBox>
                </StackPanel>

                <!--
                <StackPanel Grid.Column="2" Orientation="Vertical" Margin="0,0,10,0">
                    <TextBlock Text="Writing system:" />
                    <ComboBox Name="WritingSystemComboBox"
                              ToolTip="Choose between the simplified or the traditional form, for the result."
                              SelectionChanged="WritingSystemComboBox_SelectionChanged"
                              SelectedIndex="0">
                        <ComboBoxItem>Simplified</ComboBoxItem>
                        <ComboBoxItem>Traditional</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
                -->
                <Button Grid.Column="2" 
                        Name="ChangeSystemButton"
                        Click="ChangeWritingSystem_Click"
                        Content="Change to Traditional"
                        Margin="0,10,10,5">
                    
                </Button>
                
                <Button Grid.Column="3" Click="RandomButton_Click"
                        Content="Random Words" 
                        Margin="0,10,10,5">
                    <Button.ToolTip>
                        <ToolTip>
                            Show 200 random words
                        </ToolTip>
                    </Button.ToolTip>
                    <Button.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="test1"/>
                            <MenuItem Header="test2"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>

                <TextBlock Grid.Column="4" 
                           Name="WordsCount" 
                           ToolTip="Number of words found by the current search"
                           Margin="0,15,0,0">
                    
                </TextBlock>
            </Grid>


            <ListBox Name="WordsList" 
                     Grid.Row="2" 
                     VirtualizingStackPanel.IsVirtualizing="True"
                     VirtualizingStackPanel.VirtualizationMode="Recycling"
                     HorizontalContentAlignment="Stretch"
                     Background="WhiteSmoke">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Background="White" Margin="0">
                            
                            
                            <ItemsControl ItemsSource="{Binding SimplifiedPinyinPairs}">
                                <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"  />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Vertical" Background="White">
                                                <TextBlock
                                                    Text="{Binding ChineseCharacter}"
                                                    FontSize="48"
                                                    Foreground="{Binding CharacterColor}"
                                                    HorizontalAlignment="Center"
                                                    
                                                    
                                                    MouseUp="CharacterAndPinyin_MouseUp"
                                                    MouseEnter="CharacterAndPinyin_MouseEnter"
                                                    MouseLeave="CharacterAndPinyin_MouseLeave" >
                                                    <TextBlock.ContextMenu>
                                                        <ContextMenu>
                                                            <MenuItem Header="Show characters which contain this component"
                                                                      Tag="{Binding ChineseCharacter}"
                                                                      Click="CharactersWithComponent_Click"
                                                                      Cursor="Hand"
                                                                      FontSize="16"
                                                                      Padding="10" />
                                                            <Separator />
                                                            <MenuItem Header="Show words with this character"
                                                                      Tag="{Binding ChineseCharacter}"
                                                                      Click="WordsWithCharacter_Click"
                                                                      Cursor="Hand"
                                                                      FontSize="16"
                                                                      Padding="10" />
                                                            <Separator />

                                                        </ContextMenu>
                                                    </TextBlock.ContextMenu>
                                                </TextBlock>

                                                <TextBlock
                                                    Name="caracterPronuntie"
                                                    HorizontalAlignment="Center"
                                                    Margin="-10"
                                                    
>
                                                    <TextBlock.Inlines>
                                                        <Run Text="{Binding Pinyin}"
                                                             FontSize="12" 
                                                             FontWeight="Bold"
                                                             />
                                                    </TextBlock.Inlines>
                                                </TextBlock>

                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>

                                </ItemsControl>

                            <WrapPanel>
                                <StackPanel Orientation="Vertical" 
                                            Width="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ActualWidth}">
                                    <TextBlock
                                       Text="{Binding Definitions}" 
                                       FontSize="16"
                                       TextWrapping="WrapWithOverflow"
                                       />
                                </StackPanel>
                            </WrapPanel>

                            <Separator>
                                <Separator.RenderTransform>
                                    <ScaleTransform ScaleY="2"/>
                                </Separator.RenderTransform>
                            </Separator>
                        </StackPanel>


                                
                    </DataTemplate>
                </ListBox.ItemTemplate>

            </ListBox>
        </Grid>

        <TabControl Name="MyTabControl"
                    Grid.Column="1">
            <TabItem Header="Decomposition" 
                     ToolTip="Show a character's decomposition down to radicals level">
                <Grid>
                    <Border BorderThickness="2" BorderBrush="Black">
                        <TreeView Name="tView">

                            <TreeView.Resources>
                               <SolidColorBrush
                                    x:Key="{x:Static SystemColors.HighlightBrushKey}" 
                                    Color="Transparent" /> 
                                <SolidColorBrush
                                    x:Key="{x:Static SystemColors.ControlBrushKey}" 
                                    Color="Transparent" />
                                <SolidColorBrush
                                    x:Key="{x:Static SystemColors.HighlightTextBrushKey}" 
                                    Color="Black" />
                            </TreeView.Resources>
                        </TreeView>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Gramm.Analysis.(temp)" ToolTip="Temporary Tab">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="2*" />
                        </Grid.RowDefinitions>
                        <WrapPanel Name="MiddleWordBox" Grid.Row="0" />
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*" />
                                    <RowDefinition Height="2*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <TextBox Name="TestSentenceInputBox"
                                         Grid.Row="0"
                                         Margin="10" />
                                <TextBox Name="TestSentenceResultBox"
                                         Grid.Row="1"
                                         Margin="10" />
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0"
                                            Click="AnalyseSentence_Click"
                                            Content="Analyse sentence"
                                            Margin="25" />
                                    <Button Grid.Column="1"
                                            Click="SaveSentence_Click"
                                            Content="Save sentence"
                                            Margin="25" />

                                </Grid>

                            </Grid>

                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="4*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <TextBlock Name="AnalysisStatisticsBox"
                                           Grid.Row="0" />
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="1"
                                            Content="Hide words"
                                            Margin="20"/>
                                    <Button Grid.Column="2"
                                            Content="Hide examples"
                                            Margin="20"/>

                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>

                    <ListBox Name="ExamplesList"
                             Grid.Column="1" >
                        <StackPanel Name="StatisticsBox">
                            <TextBlock Name="DecompositionBlock2"
                           FontSize="20"
                           Margin="10" />
                        </StackPanel>
                    </ListBox>
                </Grid>
            </TabItem>

            <TabItem Header="Analysis" ToolTip="Analyse the given sentence">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="16*" />
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="914*"/>
                        <ColumnDefinition Width="319*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Grid.ColumnSpan="4" Margin="0,0,318,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="23*"/>
                            <ColumnDefinition Width="73*"/>
                            <ColumnDefinition Width="16*"/>
                            <ColumnDefinition Width="844*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <WrapPanel Name="SentenceAnalysisBox" Grid.Row="0" Grid.ColumnSpan="4" Margin="0,0,-1,0" 
                                   />


                        <TextBox Name="SentenceAnalysisInputBox"
                                 KeyUp="SentenceAnalysis_KeyUp"
                                 ToolTip="Type here the sentence which will be analyzed. Hover the word to see definition"
                                 Grid.Row="1"
                                 FontSize="16"
                                 Margin="10,10,9,10" Grid.ColumnSpan="4" />
                    </Grid>

                    <Border BorderThickness="3" 
                            BorderBrush="Black" 
                            Grid.Column="2" Grid.ColumnSpan="2" Margin="914,0,0,0">
                        <StackPanel Name="PatternsPanel" />
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Words" ToolTip="Tables of words"/>

        </TabControl>
    </Grid>
</Window>
