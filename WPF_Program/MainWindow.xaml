<Window x:Class="ChineseAppWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"        
        Closing="Window_Closing"
        Title="Licenta 2020 - Chis Ioan Traian"
        Width="1920"
        Height="1080">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ChineseResourceDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Name="WordsPanel">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="45px" />
                <RowDefinition Height="8*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="WhiteSmoke">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50px" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBox
                    Name="SearchBar"
                    Grid.Column="1"
                    Style="{StaticResource SearchBarStyle}"
                    KeyUp="SearchBar_KeyUp" />
            </Grid>

            <Grid Grid.Row="1" Background="WhiteSmoke">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Name="ChangeLanguageButton"
                        Grid.Column="0" 
                        Style="{StaticResource ChangeLanguageButtonStyle}" 
                        Click="ChangeLanguage_Click" />

                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="0,0,10,0">
                    <TextBlock Text="Sort By: "/>
                    <ComboBox 
                        Name="SortingComboBox"
                        ToolTip="Sort shown words by some criterion"
                        SelectionChanged="SortingComboBox_SelectionChanged"
                        SelectedIndex="0">
                        <ComboBoxItem ToolTip="Sort by word's frequency in language">Frequency</ComboBoxItem>
                        <ComboBoxItem ToolTip="Sort by word's number of strokes">Strokes</ComboBoxItem>
                        <ComboBoxItem ToolTip="Sort alphabetically by word's pronounciation">Pinyin</ComboBoxItem>
                        <ComboBoxItem ToolTip="The exact typed word is shown first">Exact</ComboBoxItem>
                    </ComboBox>
                </StackPanel>

                <Button Grid.Column="2"
                        Click="RandomButton_Click"
                        Style="{StaticResource RandomButtonStyle}" />

                <TextBlock Name="WordsCount" 
                           Grid.Column="3"
                           Style="{StaticResource WordsCountStyle}" />
            </Grid>


            <ListBox Name="WordsList" 
                     Grid.Row="2" 
                     Style="{StaticResource WordsListStyle}">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Background="White" Margin="0">
                            <ItemsControl ItemsSource="{Binding SimplifiedPinyinPairs}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"  />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Vertical" Background="White">
                                            <TextBlock
                                                Text="{Binding ChineseCharacter}"
                                                Foreground="{Binding CharacterColor}"
                                                Style="{StaticResource ChineseCharacterStyle}"
                                                MouseUp="CharacterAndPinyin_MouseUp"
                                                MouseEnter="CharacterAndPinyin_MouseEnter"
                                                MouseLeave="CharacterAndPinyin_MouseLeave" >

                                                <TextBlock.ContextMenu>
                                                    <ContextMenu>
                                                        <MenuItem 
                                                            Header="Show characters which contain this component"
                                                            Style="{StaticResource ContextMenuItemStyle}"
                                                            Tag="{Binding ChineseCharacter}"
                                                            Click="CharactersWithComponent_Click" />
                                                        <Separator />
                                                        <MenuItem 
                                                            Header="Show words with this character"
                                                            Style="{StaticResource ContextMenuItemStyle}"
                                                            Tag="{Binding ChineseCharacter}"
                                                            Click="WordsWithCharacter_Click" />
                                                        <Separator />
                                                    </ContextMenu>
                                                </TextBlock.ContextMenu>
                                            </TextBlock>
                                            <TextBlock
                                                Name="caracterPronuntie"
                                                Style="{StaticResource PronounciationStyle}"
                                                Text="{Binding Pinyin}" />

                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <WrapPanel>
                                <StackPanel 
                                    Orientation="Vertical" 
                                    Width="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ActualWidth}">
                                    <TextBlock
                                       Text="{Binding Definitions}" 
                                       Style="{StaticResource DefinitionsStyle}" />
                                </StackPanel>
                            </WrapPanel>

                            <Separator>
                                <Separator.RenderTransform>
                                    <ScaleTransform ScaleY="2"/>
                                </Separator.RenderTransform>
                            </Separator>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <TabControl Name="MyTabControl"
                    Grid.Column="1">
            <TabItem Header="Words">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" BorderThickness="4,4,4,2" BorderBrush="DarkSlateGray">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="54*"/>
                                <ColumnDefinition Width="515*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="35" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <TextBlock 
                                Name="DecompositionPanelTitle"
                                Grid.Row="0" 
                                Style="{StaticResource DecompositionPanelStyle}"
                                Text="Decomposition to radicals of selected character " 
                                Grid.ColumnSpan="2" />

                            <TreeView Name="tView" 
                                      Grid.Row="1" 
                                      Style="{StaticResource tViewStyle}"
                                      Grid.ColumnSpan="2" />
                        </Grid>
                    </Border>


                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" BorderThickness="4,2,2,4" BorderBrush="DarkSlateGray">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>


                                <TextBlock Grid.Row="0" 
                                   Name="LeftPanelCounter"
                                   Style="{StaticResource ExtraPanelCounterStyle}"
                                   Text="Words with selected character: " />

                                <ListBox Name="WordsExtraPanel" 
                                     Grid.Row="1" 
                                     Style="{StaticResource WordsListStyle}" >
                                    
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Background="White" Margin="0">

                                                <ItemsControl ItemsSource="{Binding SimplifiedPinyinPairs}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal"  />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>

                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Vertical" Background="White">
                                                                <TextBlock
                                                                    Text="{Binding ChineseCharacter}"
                                                                    Foreground="{Binding CharacterColor}"
                                                                    Style="{StaticResource ExtraPanelCharacterStyle}"
                                                                    MouseEnter="CharacterAndPinyin_MouseEnter"
                                                                    MouseLeave="CharacterAndPinyin_MouseLeave" >
                                                                    <TextBlock.ContextMenu>
                                                                        <ContextMenu>
                                                                            <MenuItem 
                                                                                Header="Show characters which contain this component"
                                                                                Tag="{Binding ChineseCharacter}"
                                                                                Click="CharactersWithComponent_Click"
                                                                                Style="{StaticResource ContextMenuItemStyle}" />
                                                                            <Separator />
                                                                            <MenuItem 
                                                                                Header="Show words with this character"
                                                                                Tag="{Binding ChineseCharacter}"
                                                                                Click="WordsWithCharacter_Click"
                                                                                Style="{StaticResource ContextMenuItemStyle}"/>
                                                                            <Separator />
                                                                        </ContextMenu>
                                                                    </TextBlock.ContextMenu>
                                                                </TextBlock>

                                                                <TextBlock
                                                                    Name="caracterPronuntie"
                                                                    Text="{Binding Pinyin}"
                                                                    Style="{StaticResource ExtraPanelPinyinStyle}" />

                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>

                                                </ItemsControl>

                                                <WrapPanel>
                                                    <StackPanel 
                                                        Orientation="Vertical" 
                                                        Width="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ActualWidth}">
                                                        <TextBlock
                                                            Text="{Binding Definitions}" 
                                                            Style="{StaticResource ExtraPanelDefinitionStyle}" />
                                                    </StackPanel>
                                                </WrapPanel>

                                                <Separator>
                                                    <Separator.RenderTransform>
                                                        <ScaleTransform ScaleY="2"/>
                                                    </Separator.RenderTransform>
                                                </Separator>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Border>


                        <Border Grid.Column="1" BorderThickness="2,2,4,4" BorderBrush="DarkSlateGray">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>


                                <TextBlock 
                                    Name="RightPanelCounter"
                                    Grid.Row="0" 
                                    Style="{StaticResource ExtraPanelCounterStyle}"
                                    Text="Characters with selected component: " />


                                <ListBox Name="CharsExtraPanel" 
                                     Grid.Row="1" 
                                         
                                     VirtualizingStackPanel.IsVirtualizing="True"
                                     VirtualizingStackPanel.VirtualizationMode="Recycling"
                                     Style="{StaticResource WordsListStyle}">

                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Background="White" Margin="0">
                                                <ItemsControl ItemsSource="{Binding SimplifiedPinyinPairs}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal"  />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>

                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Vertical" Background="White">
                                                                <TextBlock
                                                                    Text="{Binding ChineseCharacter}"
                                                                    Foreground="{Binding CharacterColor}"
                                                                    Style="{StaticResource ExtraPanelCharacterStyle}"
                                                                    MouseEnter="CharacterAndPinyin_MouseEnter"
                                                                    MouseLeave="CharacterAndPinyin_MouseLeave" >
                                                                    <TextBlock.ContextMenu>
                                                                        <ContextMenu>
                                                                            <MenuItem 
                                                                                Header="Show characters which contain this component"
                                                                                Tag="{Binding ChineseCharacter}"
                                                                                Click="CharactersWithComponent_Click"
                                                                                Style="{StaticResource ContextMenuItemStyle}" />
                                                                            <Separator />
                                                                            <MenuItem 
                                                                                Header="Show words with this character"
                                                                                Tag="{Binding ChineseCharacter}"
                                                                                Click="WordsWithCharacter_Click"
                                                                                Style="{StaticResource ContextMenuItemStyle}" />
                                                                            <Separator />
                                                                        </ContextMenu>
                                                                    </TextBlock.ContextMenu>
                                                                </TextBlock>

                                                                <TextBlock
                                                                    Name="caracterPronuntie"
                                                                    Text="{Binding Pinyin}"
                                                                    Style="{StaticResource ExtraPanelPinyinStyle}" />
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>

                                                <WrapPanel>
                                                    <StackPanel 
                                                        Orientation="Vertical" 
                                                        Width="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ActualWidth}">
                                                        <TextBlock
                                                            Text="{Binding Definitions}" 
                                                            Style="{StaticResource ExtraPanelDefinitionStyle}" />
                                                    </StackPanel>
                                                </WrapPanel>

                                                <Separator>
                                                    <Separator.RenderTransform>
                                                        <ScaleTransform ScaleY="2"/>
                                                    </Separator.RenderTransform>
                                                </Separator>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header="Analysis" ToolTip="Analyse the given sentence">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="16*" />
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="914*"/>
                        <ColumnDefinition Width="319*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Grid.ColumnSpan="4" Margin="0,0,318,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="23*"/>
                            <ColumnDefinition Width="73*"/>
                            <ColumnDefinition Width="16*"/>
                            <ColumnDefinition Width="844*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <WrapPanel Name="SentenceAnalysisBox" Grid.Row="0" Grid.ColumnSpan="4" Margin="0,0,-1,0" />

                        <TextBox Name="SentenceAnalysisInputBox"
                                 Grid.Row="1"
                                 KeyUp="SentenceAnalysis_KeyUp"
                                 Style="{StaticResource SentenceAnalysisInputBoxStyle}"
                                 Grid.ColumnSpan="4" />
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header="Analysis.(temporary)" ToolTip="Temporary Tab">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="2*" />
                        </Grid.RowDefinitions>
                        <WrapPanel Name="MiddleWordBox" Grid.Row="0" />
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*" />
                                    <RowDefinition Height="2*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <TextBox Name="TestSentenceInputBox"
                                         Grid.Row="0"
                                         Style="{StaticResource TestSentenceInputBoxStyle}" />
                                <TextBox Name="TestSentenceResultBox"
                                         Grid.Row="1"
                                         Style="{StaticResource TestSentenceResultBoxStyle}" />
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0"
                                            Click="AnalyseSentence_Click"
                                            Content="Analyse sentence"
                                            Style="{StaticResource AnalyseSentenceButtonStyle}" />
                                    <Button Grid.Column="1"
                                            Click="SaveSentence_Click"
                                            Content="Save sentence"
                                            Style="{StaticResource SaveSentenceButtonStyle}" />
                                </Grid>
                            </Grid>

                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="4*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <TextBlock 
                                    Name="AnalysisStatisticsBox"
                                    Grid.Row="0" />
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="1"
                                            Content="Hide words"
                                            Style="{StaticResource HideWordsButtonStyle}" />
                                    <Button Grid.Column="2"
                                            Content="Hide examples"
                                            Style="{StaticResource HideExamplesButtonStyle}" />
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>

                    <ListBox 
                        Name="ExamplesList"
                        Grid.Column="1" >
                        <!--
                        <StackPanel Name="StatisticsBox">
                            <TextBlock 
                                Name="DecompositionBlock2"
                                FontSize="20"
                                Margin="10" />
                        </StackPanel>
                        -->
                    </ListBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
