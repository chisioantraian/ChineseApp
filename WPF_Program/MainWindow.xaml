<Window x:Class="ChineseAppWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChineseAppWPF"
        mc:Ignorable="d"
        
        Closing="Window_Closing"
        Title="Window1" Height="1080" Width="1920" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Name="WordsPanel">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="45px" />
                <RowDefinition Height="8*" />
            </Grid.RowDefinitions>

            <TextBox 
                    Grid.Row="0"
                    Name="SearchBar" FontSize="16" 
                    Padding="12" Margin="12" 
                    KeyUp="SearchBar_KeyUp"/>


            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />

                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="5,0,10,0">
                    <TextBlock Text="Input type:" />
                    <ComboBox
                        Name="InputComboBox"                                 
                        
                        SelectedIndex="0">
                        <ComboBoxItem>English</ComboBoxItem>
                        <ComboBoxItem>Chinese</ComboBoxItem>
                        <ComboBoxItem>Pronounciation</ComboBoxItem>
                        <ComboBoxItem>Compose</ComboBoxItem>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="0,0,10,0">
                    <TextBlock Text="Sort By: "/>
                    <ComboBox Name="SortingComboBox"
                              SelectionChanged="SortingComboBox_SelectionChanged"
                          
                          SelectedIndex="0">
                        <ComboBoxItem>Frequency</ComboBoxItem>
                        <ComboBoxItem>Strokes</ComboBoxItem>
                        <ComboBoxItem>Pinyin</ComboBoxItem>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Vertical" Margin="0,0,10,0">
                    <TextBlock Text="Writing system:" />
                    <ComboBox SelectedIndex="0">
                        <ComboBoxItem>Simplified</ComboBoxItem>
                        <ComboBoxItem>Traditional</ComboBoxItem>
                    </ComboBox>
                </StackPanel>

                <Button Grid.Column="3" Click="RandomButton_Click"
                        Content="Random Words" 
                        Margin="0,10,10,5"/>

                <TextBlock Grid.Column="4" Name="WordsCount" Margin="0,15,0,0"/>
            </Grid>


            <ListBox Name="WordsList" 
                     Grid.Row="2" 
                     VirtualizingStackPanel.VirtualizationMode="Recycling"
                     HorizontalContentAlignment="Stretch">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="8">
                            <StackPanel>

                                <ItemsControl ItemsSource="{Binding SimplifiedPinyinPairs}">

                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock
                                                    Text="{Binding ChineseCharacter}"
                                                    FontSize="48"
                                                    HorizontalAlignment="Center"
                                                    MouseUp="CharacterAndPinyin_MouseUp"
                                                    MouseEnter="CharacterAndPinyin_MouseEnter"
                                                    />

                                                <TextBlock
                                                    Name="caracterPronuntie"
                                                    HorizontalAlignment="Center"
                                                    Margin="-10"
>
                                                    <TextBlock.Inlines>
                                                        <Run Text="{Binding Pinyin}"
                                                             FontSize="12" 
                                                             FontWeight="Bold"
                                                             Foreground="DarkGreen"
                                                             />
                                                    </TextBlock.Inlines>
                                                </TextBlock>

                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>

                                </ItemsControl>

                                <TextBlock Text="{Binding Definitions}" 
                                       FontSize="16"
                                       Foreground="Brown"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>

            </ListBox>
        </Grid>

        <TabControl Name="MyTabControl"
                    Grid.Column="1">
            <TabItem Header="Decomposition">
                <Grid>
                    <Border BorderThickness="2" BorderBrush="Black">
                        <TreeView Name="tView"> </TreeView>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Gramm.Analysis.(temp)">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="2*" />
                        </Grid.RowDefinitions>
                        <WrapPanel Name="MiddleWordBox" Grid.Row="0" />
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*" />
                                    <RowDefinition Height="2*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <TextBox Name="TestSentenceInputBox"
                                         Grid.Row="0"
                                         Margin="10" />
                                <TextBox Name="TestSentenceResultBox"
                                         Grid.Row="1"
                                         Margin="10" />
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0"
                                            Click="AnalyseSentence_Click"
                                            Content="Analyse sentence"
                                            Margin="25" />
                                    <Button Grid.Column="1"
                                            Click="SaveSentence_Click"
                                            Content="Save sentence"
                                            Margin="25" />

                                </Grid>

                            </Grid>

                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="4*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <TextBlock Name="AnalysisStatisticsBox"
                                           Grid.Row="0" />
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="1"
                                            Content="Hide words"
                                            Margin="20"/>
                                    <Button Grid.Column="2"
                                            Content="Hide examples"
                                            Margin="20"/>

                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>

                    <ListBox Name="ExamplesList"
                             Grid.Column="1" >
                        <StackPanel Name="StatisticsBox">
                            <TextBlock Name="DecompositionBlock2"
                           FontSize="20"
                           Margin="10" />
                        </StackPanel>
                    </ListBox>
                </Grid>
            </TabItem>

            <TabItem Header="Analysis">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="16*" />
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="914*"/>
                        <ColumnDefinition Width="319*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Grid.ColumnSpan="4" Margin="0,0,318,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="23*"/>
                            <ColumnDefinition Width="73*"/>
                            <ColumnDefinition Width="16*"/>
                            <ColumnDefinition Width="844*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <WrapPanel Name="SentenceAnalysisBox" Grid.Row="0" Grid.ColumnSpan="4" Margin="0,0,-1,0" />


                        <TextBox Name="SentenceAnalysisInputBox"
                                 KeyUp="SentenceAnalysis_KeyUp"
                                 Grid.Row="1"
                                 FontSize="16"
                                 Margin="10,10,9,10" Grid.ColumnSpan="4" />
                    </Grid>

                    <Border BorderThickness="3" 
                            BorderBrush="Black" 
                            Grid.Column="2" Grid.ColumnSpan="2" Margin="914,0,0,0">
                        <StackPanel Name="PatternsPanel" />
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Words" />

        </TabControl>
    </Grid>
</Window>
